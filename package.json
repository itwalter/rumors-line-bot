{
  "name": "rumors-line-bot",
  "version": "0.0.1",
  "description": "Line bot that checks if a message contains internet rumor. Edit",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "dev": "pm2-dev ecosystem.dev.config.js",
    "postinstall": "babel src -d build",
    "lint:fix": "eslint --fix .",
    "lint": "eslint .",
    "preliff": "bash build-liff.sh",
    "liff": "gh-pages -d liff",
    "i18n:extract": "ttag update i18n/zh_TW.po src/",
    "i18n:validate": "ttag validate i18n/zh_TW.po"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cofacts/rumors-line-bot.git"
  },
  "keywords": [
    "Rumor",
    "Mythbusting",
    "LINE bot"
  ],
  "author": "MrOrz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cofacts/rumors-line-bot/issues"
  },
  "homepage": "https://github.com/cofacts/rumors-line-bot#readme",
  "dependencies": {
    "@babel/polyfill": "^7.7.0",
    "@babel/runtime-corejs2": "^7.7.0",
    "@koa/cors": "^3.0.0",
    "@line/bot-sdk": "^6.0.0",
    "googleapis": "^48.0.0",
    "grapheme-splitter": "^1.0.4",
    "koa": "^2.5.0",
    "koa-router": "^8.0.0",
    "koa-static": "^5.0.0",
    "node-fetch": "^2.0.0",
    "pm2": "^4.0.0",
    "raw-body": "^2.3.2",
    "redis": "^3.0.0",
    "rollbar": "^2.2.9",
    "string-similarity": "^4.0.0",
    "ttag": "^1.7.20",
    "universal-analytics": "^0.4.16"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/node": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-json-strings": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-import-meta": "^7.2.0",
    "@babel/preset-env": "^7.6.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.0.0",
    "coveralls": "^3.0.0",
    "dotenv": "^8.0.0",
    "eslint": "^6.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-prettier": "^3.0.0",
    "gh-pages": "^2.0.1",
    "jest-cli": "^25.0.0",
    "prettier": "=1.13.0",
    "ttag-cli": "^1.7.25"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "src"
    ],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/__fixtures__/"
    ],
    "setupTestFrameworkScriptFile": "./setup-jest.js"
  },
  "engines": {
    "node": "12.x"
  }
}
